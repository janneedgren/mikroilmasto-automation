[Unit]
Description=CFD Results HTTP Server
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=eetu
Group=eetu
WorkingDirectory=/home/eetu/apps/CFD_Microclimate
ExecStart=/usr/bin/python3 /home/eetu/apps/CFD_Microclimate/serve_results.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
